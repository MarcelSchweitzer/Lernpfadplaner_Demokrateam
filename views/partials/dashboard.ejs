<div class="container">
    <img class="img-background" src="img/settings.png">
    <div class="start-btn">
        <button class="button btn btn-primary" type="create" id="createLpBtn">Neuen Lernpfad erstellen +</button>
    </div>
  
    <hr>
    <div class="row">
        <div class="col-md-7">
        <div class="history">
            <div class="card">
                <div class="card-header">
                    Meine Lernpfade
                </div>
                <div class="card-body">
                    <input class="form-control" id="searchbox" type="text" placeholder="Search..">
                    <hr>
                    <div class="container">
                    <% data.learningPaths.forEach(lp=>{ %>
                        <div class="row">
                            <div id="openLpDiv<%= lp['lpid'] %>">
                                <button class="button btn btn-primary openLp" id="openLp<%= lp['lpid'] %>">
                                <%= lp['title'] %>
                                </button>
                            </div>
                            <div class="deleteLpClass" id="deleteLpDiv<%= lp['lpid'] %>">
                                <button class="button btn btn-warning deleteLp" id="delete<%= lp['lpid']%>">Löschen</button>
                            </div>
                        
                        </div>
                        <% }); %>
                    </div>
                    </div>
                </div>
           </div>
        </div>
        <div class="col-md-5">
            <div class="form" id="dropDiv">
                <input type="file" class="fileDrop" id="importDrop" multiple>
                <p id="dropText">Ziehe Deine Lernpfad-Dateien in dieses Feld oder klicke darauf, um eine Datei von Deinem Rechner auszuwählen!</p>
            </div>
        </div>
           </div>
        </div>
      
    </section>
   
</div>
<div class="space"></div>

